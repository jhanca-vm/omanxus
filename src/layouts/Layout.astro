---
import '@fontsource-variable/dm-sans'
import { Image } from 'astro:assets'
import logo from '../assets/logo.png'
import Header from '../components/Header.svelte'
import Footer from '../components/Footer.astro'
import SVG from '@/components/SVG.astro'

interface Props {
  title: string
  description?: string
}

const { title, description } = Astro.props
---

<html lang="es" class="min-w-[375px] overflow-x-hidden scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body>
    <Header client:media="(max-width: 767px)">
      <Image
        class="w-36 md:w-44"
        src={logo}
        alt="Omanxus: tecnologÃ­as del conocimiento aplicado"
      />
    </Header>
    <main>
      <slot />
    </main>
    <Footer />
    <a
      class="btn btn-circle btn-success btn-lg fixed bottom-6 right-6 shadow-xl"
      href="https://api.whatsapp.com/send/?phone=34619768720&text=Hola+%2AOmanxus%2A.+Necesito+m%C3%A1s+informaci%C3%B3n+sobre+Aviso+legal&type=phone_number&app_absent=0"
      target="_blank"
      rel="noreferrer"
    >
      <SVG class="w-11">
        <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path>
        <path
          d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
        ></path>
      </SVG>
    </a>
  </body>
</html>

<style is:global>
  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
    appearance: none;
  }

  input[type='number'] {
    -moz-appearance: textfield;
  }

  .container {
    max-width: 72rem;
    margin-inline: auto;
    padding-inline: 1.25rem;
  }

  @media (min-width: 768px) {
    .container {
      padding-inline: 2.5rem;
    }
  }
</style>
