import ue from '../assets/ue.png'
---

<footer class="bg-neutral text-white/80">
  <div class="container footer justify-between gap-x-7 py-12">
    <aside>
      <Image src={logo} alt="Omanxus" />
      <p class="mt-3">Sede central: C/Aragón -199 INT, 36206 Vigo, España</p>
      <p>
        Teléfono: <a href="tel:+349860433551">+34 986 043 35 51</a> / <a
          href="tel:+34657192009">+34 657 19 20 09</a
        > / <a href="tel:+34657458507">+34 657 458 507</a>
      </p>
      <p class="flex gap-x-[1em]">
        <a href="mailto:comercial@omanxus.com">comercial@omanxus.com</a>
        <a href="https://www.omanxus.com">www.omanxus.com</a>
      </p>
    </aside>
    <nav class="text-base">
      <header class="footer-title">Enlaces</header>
      <a href="/#acerca">Acerca de</a>
      <a href="/#aplicaciones">Aplicaciones</a>
      <a href="/#contacto">Contacto</a>
      <a href="/blog">Blog</a>
    </nav>
    <Image class="w-60" src={ue} alt="" />
  </div>
  <aside class="bg-accent/5 py-5 text-xs tracking-wide lg:text-sm">
